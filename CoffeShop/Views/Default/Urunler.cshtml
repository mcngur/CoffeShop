@using CoffeShop.Controllers
@model List<CoffeShop.Models.urunler>

@{
    ViewBag.Title = "Ürünler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{var tek = true;}
@foreach (var urun in Model)
{
    <section class="page-section">
        <div class="container">
            <div class="product-item">
                <div class="product-item-title d-flex">
                    <div class="bg-faded p-5 d-flex @(tek?"ml-auto":"mr-auto" ) rounded">
                        <h2 class="section-heading mb-0">
                            <span class="section-heading-upper">@urun.UrunUstBaslik</span>
                            <span class="section-heading-lower">@urun.UrunBaslik</span>
                        </h2>
                    </div>
                </div>
                <img class="product-item-img mx-auto d-flex rounded img-fluid mb-3 mb-lg-0" src="~/Content/img/@urun.UrunFoto" alt="">
                <div class="product-item-description d-flex @(tek?"mr-auto":"ml-auto") ">
                    <div class="bg-faded p-5 rounded">
                        @Html.Raw(urun.Icerik)
                        <br/>
                        @Html.ActionLink("Detay","UrunDetay", new{id=urun.ID, baslik=Seo.AdresDuzenle(urun.UrunBaslik)}, new {@class="btn btn-info"})
                    </div>
                </div>
            </div>
        </div>
    </section>
    tek = !tek;
}
