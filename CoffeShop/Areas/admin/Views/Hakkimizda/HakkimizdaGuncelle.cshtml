@model CoffeShop.Models.hakkimizda

@{
    ViewBag.Title = "Hakkımızda";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content-wrapper">
    <div class="container">
        <h2>Hakkımızda İçerik Güncelleme Ekranı</h2>
        @using (Html.BeginForm("Kaydet", "Hakkimizda", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            <table class="table table-hover bg-white">
                <tr>
                    <td>Fotoğraf</td>
                    <td>
                        <img src="~/Content/img/@Model.Foto" width="200" />
                        @Html.TextBoxFor(m => m.fotoFile, new { type = "file" })
                    </td>
                </tr>

                <tr>
                    <td>Üst Başlık</td>
                    <td>
                        @Html.TextBoxFor(m => m.UstBaslik, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UstBaslik)
                    </td>
                </tr>

                <tr>
                    <td>Başlık</td>
                    <td>
                        @Html.TextBoxFor(m => m.Baslik, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Baslik)
                    </td>
                </tr>

                <tr>
                    <td >İçerik</td>
                    <td>
                        @Html.TextAreaFor(m => m.Icerik, new { id="icerik", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Icerik)
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        @Html.HiddenFor(m => m.Foto)
                        @Html.HiddenFor(m => m.ID)
                        <input type="submit" value="Güncelle" class="btn btn-success" />
                    </td>
                </tr>
            </table>
        }
    </div>
</div>

@section altTaraf
{
    <!-- summernote -->
    <link rel="stylesheet" href="~/Content/admin/plugins/summernote/summernote-bs4.css">

    <!-- Summernote -->
    <script src="~/Content/admin/plugins/summernote/summernote-bs4.min.js"></script>
    <script>
        $(function () {
            // Summernote
            $('#icerik').summernote()
        })
    </script>
}
